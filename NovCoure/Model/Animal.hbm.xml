<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
				   assembly="NovCoure"
				   namespace="NovCoure.Model">

	<class name="Animal" abstract="true" table="Animals">
		<id name="Id">
			<generator class="identity"/>
		</id>

		<joined-subclass name="Dog" table="Dogs">
			<key column="Id"/>
			<property name="Barks"/>
		</joined-subclass>

		<joined-subclass name="Cat" table="Cats">
			<key column="Id"/>
			<property name="Annoying"/>
		</joined-subclass>

	</class>

</hibernate-mapping>