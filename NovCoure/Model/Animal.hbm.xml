<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
				   assembly="NovCoure"
				   namespace="NovCoure.Model">

	<class name="Animal" abstract="true" table="Animals">
		<id name="Id">
			<generator class="hilo"/>
		</id>

		<component name="Home">
			<property name="City" column="HomeCity"/>
			<property name="Street" column="HomeStreet"/>
		</component>

		<component name="Vet">
			<property name="City" column="VetCity"/>
			<property name="Street" column="VetStreet"/>
		</component>

		<!--<property name="HomeCity"/>
		<property name="HomeStreet"/>

		<property name="VetCity"/>
		<property name="VetStreet"/>-->

		<union-subclass name="Dog" table="Dogs">
			<property name="Barks"/>
		</union-subclass>

		<union-subclass name="Cat" table="Cats">
			<property name="Annoying"/>
		</union-subclass>

	</class>

</hibernate-mapping>